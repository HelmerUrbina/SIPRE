<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">  
        <property name="host" value="chasqui.ejercito.mil.pe" />  
        <property name="username" value="kcanoh@ejercito.mil.pe" />  
        <property name="password" value="Promo2013$" />  
        <property name="port" value="25" />  
        <property name="javaMailProperties">
            <props>  
                <prop key="mail.smtp.auth">true</prop>  
                <prop key="mail.smtp.port">25</prop>  
                <prop key="mail.debug">true</prop>  
                <prop key="mail.smtp.ssl.trust">chasqui.ejercito.mil.pe</prop>  
                <prop key="mail.transport.protocol">smtp</prop>  
                <prop key="mail.smtp.starttls.enable">false</prop>  
                <prop key="mail.smtp.starttls.required">true</prop>  
                <prop key="mail.smtp.ssl.enable">true</prop>  
            </props>  
        </property>  
    </bean>  
    <bean id="mailMail" class="MailMail">  
        <property name="mailSender" ref="mailSender" />  
    </bean>  
</beans>