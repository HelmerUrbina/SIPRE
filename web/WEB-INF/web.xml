<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>Sistema Integrado Presupuestal del Ejercito</display-name>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Pool de Conexiones DataBase</description>
        <res-ref-name>OPREDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>UserServices.Login.InicioServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>SimpleCaptcha</servlet-name>
        <servlet-class>nl.captcha.servlet.SimpleCaptchaServlet</servlet-class>
        <init-param>
            <param-name>width</param-name>
            <param-value>300</param-value>
        </init-param>
        <init-param>
            <param-name>height</param-name>
            <param-value>100</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleCaptcha</servlet-name>
        <url-pattern>/ImgCaptcha</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/FinSession.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPagina</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/ErrorPagina</location>
    </error-page>
    <resource-ref>
        <description>jdbc:mysql://D165-006:3306/biostar2_ac?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>BIOSTAR</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
